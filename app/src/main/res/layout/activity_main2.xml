<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFA3A3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/box_center_center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#B3ABAB"
            android:gravity="center"
            android:padding="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.33"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/box_top_center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#B3ABAB"
            android:gravity="center"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.33"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/box_bottom_center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#B3ABAB"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.33"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Left Row -->
        <ImageView
            android:id="@+id/box_center_start"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#B3ABAB"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_percent="0.33"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/box_top_start"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#B3ABAB"
            android:gravity="center"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_percent="0.33"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/box_bottom_start"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#B3ABAB"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_percent="0.33"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/box_center_end"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#B3ABAB"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.33"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/box_top_end"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#B3ABAB"
            android:gravity="center"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.33"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/box_bottom_end"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#B3ABAB"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.33" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/turn"
        android:layout_width="211dp"
        android:layout_height="41dp"
        android:background="#473e50"
        android:rotationX="0"
        android:text="X Turn"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.742" />

</androidx.constraintlayout.widget.ConstraintLayout>